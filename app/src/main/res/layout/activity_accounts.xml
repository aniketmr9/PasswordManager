<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AccountsActivity">
    <TableLayout
            android:layout_width="366dp"
            android:layout_height="519dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="2dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/accountsLayout"
            android:stretchColumns="*">
    </TableLayout>
    <Button
            android:text="Add Account"
            android:layout_width="209dp"
            android:layout_height="54dp" android:id="@+id/addAccountBtn"
            app:layout_constraintTop_toBottomOf="@+id/accountsLayout"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/holo_green_dark"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
    <TextView
            android:layout_width="373dp"
            android:layout_height="23dp" android:id="@+id/addAccountErr"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/accountsLayout" android:layout_marginEnd="182dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="171dp" android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/addAccountBtn" app:layout_constraintHorizontal_bias="0.482"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp" android:textAlignment="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>