<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/usernameReg"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.52" app:layout_constraintVertical_bias="0.151"
            android:hint="Username"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordReg"
            app:layout_constraintTop_toBottomOf="@+id/usernameReg" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.525" app:layout_constraintVertical_bias="0.087"
            android:hint="Password"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordConfirmReg"
            app:layout_constraintTop_toBottomOf="@+id/passwordReg"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.525"
            app:layout_constraintVertical_bias="0.109" android:hint="Confirm Password"/>
    <Button
            android:text="Create User"
            android:layout_width="168dp"
            android:layout_height="54dp" android:id="@+id/createUser"
            app:layout_constraintTop_toBottomOf="@+id/passwordConfirmReg" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="96dp"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.011"
            android:background="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
    <TextView
            android:layout_width="396dp"
            android:layout_height="48dp" android:id="@+id/regError"
            app:layout_constraintTop_toBottomOf="@+id/createUser"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>